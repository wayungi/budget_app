

<div id="<%= dom_id category %>">
  <div class="cat_panel">
    <p>
      <%= image_tag "#{category.icon}", class:'image_size' %>
    </p>
    <p>
      <%= link_to "#{category.name}", category_expenses_path(category), class:'cat_name' %><br />
      <%= category.created_at.strftime("%Y-%m-%d") %>
    </p>
    <p>
      <strong>UGX: <%= category.expenses.sum(:amount) %></strong>
    </p>
  </div>
</div>
