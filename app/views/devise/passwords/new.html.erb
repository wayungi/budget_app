<div class="wrapper">
  <div class="devise_page  flex-display column sign-up-page bg-pane">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <h2  class="sign-up-title">Forgot your password?</h2>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'form-field' %>
        </div>

        <div class="btn">
          <%= f.submit "Send me reset password instructions", class:'sign-up-btn'%>
        </div>

        <div class="btn">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

      
  </div>
 </div> 
