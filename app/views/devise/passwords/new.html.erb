<div class="wrapper">
  <div class="devise_page">
      <h2  class="login_title">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'form-field' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:'btn_login'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
 </div> 
