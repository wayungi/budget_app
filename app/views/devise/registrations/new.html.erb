<div class="wrapper">
  <div class="devise_page flex-display column sign-up-page bg-pane">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <h1  class="sign-up-title">Sign up</h1>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, class:'form-field', placeholder:'Name' %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:'form-field', placeholder:'Email' %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'form-field', placeholder: "Password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class:'form-field', placeholder:'Confirm password' %>
      </div>

      <div class="btn">
        <%= f.submit "Sign up", class:'sign-up-btn' %>
      </div>

      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>

    <% end %>
  </div>
</div>
